<%- include('header', {userId:userId, login_status: login_status}); -%>






    <div class="container my-5">

        <a href="#" class="hind-siliguri text-primary text-center h5 text-decoration-none"> <%= category_name[0].category_name %>  <br> <br></a>
          
        <div class="row">

          <%  for( var j = 0; j< thiscategory_product.length; j++ ){ %>


                <div class="col-lg-4">

                    <div class="container shadow-sm rounded-3">
    
                        <img src="<%=  thiscategory_product[j].product_image_url %>" class="img-fluid my-3" alt="...">
    
                        <div class="fs-5 fw-bold baloo-da-2 text-success my-3"><%=  thiscategory_product[j].product_name %></div>
                       
                        <div class="row">
    
                            <div class="col-6">
    
                                <div class="fs-6 hind-siliguri"><del>মূল্য - <%=  thiscategory_product[j].main_price %> BDT</del>  </div>
    
                            </div>
    
                            <div class="col-6">
    
                                <div class="fs-6 fw-bold hind-siliguri text-end text-primary"><%=  thiscategory_product[j].discount %>% ছাড় চলছে</div>
    
                            </div>
    
                        </div>
    
                        <div class="row my-3">
    
                            <div class="col-7">
    
                                <div class="containter p-0">

                                    <% var price = Math.floor(((100 - thiscategory_product[j].discount)/100)*thiscategory_product[j].main_price); %>
    
                                    <button type="button" class="btn btn-warning w-100 fw-bold hind-siliguri ">মূল্য - <%= price %>/= BDT</button>
    
                                </div>
    
                                
    
                            </div>
    
                            <div class="col-5">
    
                                <div class="container text-end p-0">
    
                                    <% if( userId != null){ %>

                                        <a type="button" onclick= "addtoCart( '<%= thiscategory_product[j].id %>' )" class="btn btn-success w-100 fw-bold hind-siliguri">Add to Cart </a>

                                   <% } else{ %>

                                    <a type="button" href="/login" class="btn btn-success w-100 fw-bold hind-siliguri">Add to Cart</a>

                                   <% } %>

                                    
    
                                </div>
    
                                
    
                            </div>
    
    
                        </div>
    
                        <div class="row my-3 pb-3">
    
                            
                            <div class="col-5">
    
                                <div class="container text-end p-0">
    
                                    <% if( userId != null){ %>

                                        <a type="button" onclick= "addtoCart( '<%= products[j].id %>' )" class="btn btn-dark w-100 fw-bold baloo-da-2">Buy Now </a>

                                   <% } else{ %>

                                    <a type="button" href="/login" class="btn btn-dark w-100 fw-bold baloo-da-2">Buy Now</a>

                                   <% } %>
                                </div>
    
                                
    
                            </div>
    
                            <div class="col-7">
    
                                <div class="containter p-0">
    
                                    <a href="/product/<%= thiscategory_product[j].id %>"  type="button" class="btn btn-outline-dark w-100 fw-bold hind-siliguri">View Details</a>
    
                                </div>
    
                                
    
                            </div>
    
    
    
                        </div>

                    
                       
                       
    
                        
    
                    </div>
    
                    
    
                </div>

         
           


          <%  } %>

           

            

        </div>

      </div>

      <%- include('add_cart_modal'); -%>






     
      <%- include('footer'); -%>
